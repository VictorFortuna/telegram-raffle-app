# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_raffle
DB_HOST=localhost
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=telegram_raffle

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/webhook/telegram

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT and Encryption
JWT_SECRET=your_super_secret_jwt_key_here
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Admin Panel
ADMIN_PASSWORD_HASH=$2a$10$example_bcrypt_hash_here
ADMIN_USERNAME=admin

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Railway Configuration (for production)
RAILWAY_STATIC_URL=
RAILWAY_PUBLIC_DOMAIN=